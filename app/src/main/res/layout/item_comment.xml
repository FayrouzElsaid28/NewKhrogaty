<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comment_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/profile"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/auther_name"
        tools:text="Omar Ahmed"
        android:textColor="@color/black"
        android:fontFamily="@font/happy_times_at_the_ikob_regular"
        app:layout_constraintTop_toTopOf="@id/comment_avatar"
        app:layout_constraintStart_toEndOf="@id/comment_avatar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment_date"
        tools:text="03:30 PM"
        app:layout_constraintTop_toTopOf="@id/auther_name"
        app:layout_constraintStart_toEndOf="@id/auther_name"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment_info"
        android:text="@string/onboarding_text"
        app:layout_constraintTop_toBottomOf="@id/auther_name"
        app:layout_constraintStart_toStartOf="@id/auther_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/comment_info"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>