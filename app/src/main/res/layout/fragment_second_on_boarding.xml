<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/onboarding_bg_right"
    tools:context=".view.onboarding.onboardingFragments.FirstOnBoardingFragment">

    <ImageView
        android:id="@+id/logo_img"
        android:src="@drawable/khrogaty_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="80dp"
        android:layout_height="100dp"/>

    <ImageView
        android:src="@drawable/onboard_second_icon_1"
        app:layout_constraintBottom_toTopOf="@id/onboarding_type_tv"
        app:layout_constraintStart_toStartOf="@id/onboarding_type_tv"
        app:layout_constraintEnd_toEndOf="@id/onboarding_type_tv"
        android:layout_marginBottom="16dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/onboarding_type_tv"
        android:text="@string/restaurants_and_coffee"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/onboarding_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/onboarding_txt"
        android:text="@string/onboarding_text"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>